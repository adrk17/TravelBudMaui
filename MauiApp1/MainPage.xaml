<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiApp1.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:Resources.Classes"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewmodel="clr-namespace:MauiApp1.ViewModel"
    Title="{Binding Title}"
    x:DataType="viewmodel:LocationViewModel"
    BackgroundColor="#a49beb">
    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior Command="{Binding GetLocationsCommand}" EventName="Appearing" />
    </ContentPage.Behaviors>

    <Grid
        ColumnDefinitions="*"
        RowDefinitions="*,Auto"
        RowSpacing="0">

        <CollectionView
            BackgroundColor="Transparent"
            ItemsSource="{Binding Locations}"
            SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Location">

                    <SwipeView Threshold="40">
                        <SwipeView.LeftItems>
                            <SwipeItems Mode="Execute">
                                <SwipeItemView Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:LocationViewModel}}, Path=DeleteLocationCommand}" CommandParameter="{Binding .}">

                                    <Border
                                        Margin="0"
                                        BackgroundColor="#A01515"
                                        StrokeShape="RoundRectangle 10,0,10,0"
                                        StrokeThickness="0">
                                        <Label
                                            FontSize="10"
                                            Text="Delete"
                                            TextColor="White" />
                                    </Border>

                                </SwipeItemView>

                            </SwipeItems>
                        </SwipeView.LeftItems>
                        <Frame
                            Margin="6,6,6,3"
                            Padding="0"
                            HeightRequest="125">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:LocationViewModel}}, Path=GoToLocationDetailsCommand}" CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>
                            <Grid Padding="0">
                                <Image
                                    Aspect="AspectFill"
                                    Opacity="0.8"
                                    Source="{Binding ImageURL}" />
                                <VerticalStackLayout Padding="10">
                                    <Frame
                                        Margin="0"
                                        Padding="3"
                                        BackgroundColor="#33FFFFFF"
                                        BorderColor="Transparent"
                                        HorizontalOptions="Start"
                                        Opacity="1"
                                        VerticalOptions="Start">
                                        <Label
                                            FontSize="35"
                                            Opacity="1"
                                            Text="{Binding Title}"
                                            TextColor="Black" />
                                    </Frame>

                                    <Label
                                        FontAttributes="Italic"
                                        Text="{Binding Description}"
                                        TextColor="Black" />
                                    <Frame
                                        Margin="0"
                                        Padding="3"
                                        BackgroundColor="#33FFFFFF"
                                        BorderColor="Transparent"
                                        HorizontalOptions="End"
                                        Opacity="1"
                                        VerticalOptions="End">
                                        <Label
                                            FontSize="20"
                                            Text="{Binding Country}"
                                            TextColor="Black" />
                                    </Frame>


                                </VerticalStackLayout>
                            </Grid>
                        </Frame>
                    </SwipeView>

                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>
        <Button
            Grid.Row="1"
            Margin="8"
            Command="{Binding GoToAddLocationPageCommand}"
            IsEnabled="{Binding IsNotBusy}"
            Text="Add new Location" />
        <ActivityIndicator
            Grid.RowSpan="2"
            HorizontalOptions="CenterAndExpand"
            IsRunning="{Binding IsBusy}"
            IsVisible="{Binding IsBusy}"
            Scale="2"
            VerticalOptions="FillAndExpand" />


    </Grid>


</ContentPage>
