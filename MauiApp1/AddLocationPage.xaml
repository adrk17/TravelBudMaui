<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:MauiApp1.ViewModel"
             x:DataType="viewmodel:AddLocationViewModel"
             x:Class="MauiApp1.AddLocationPage"
             Title="{Binding Title}">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Entry Placeholder="Location name" FontSize="30" Text="{Binding LocationName}"/>
        <Entry Placeholder="Country" FontSize="20" Text="{Binding Country}"/>
        <Editor Placeholder="Description" FontSize="15" AutoSize="TextChanges" Text="{Binding Description}"/>
        <Button Text="Add" Command="{Binding AddNewLocationCommand}"/>
    </VerticalStackLayout>
</ContentPage>